<%= form_for(lp,  html: {class: 'form-horizontal'}) do |f| %>
  <% if lp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(lp.errors.count, "error") %> prohibited this lp from being saved:</h2>

      <ul>
      <% lp.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-sm-2">
      <%= f.label :name %>
    </label>
    <div class="col-sm-10">
      <%= f.text_field :name %>
    </div>
  </div>


  <div class="form-group">
    <label class="control-label col-sm-2">
      <%= f.label :description %>
    </label>
    <div class="col-sm-10">
      <%= f.text_field :description %>
    </div>
  </div>


  <div class="form-group">
    <label class="control-label col-sm-2">
      Artist
    </label>
    <div class="col-sm-2">
      <%= f.select :artist_id, options_for_select(@artists.all.map{|s|[s.name, s.id]}, selected: f.object.artist_id), { include_blank: false}, {:class => "form-control"} %>
    </div>
  </div>



  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default"><%= f.submit %></button>
    </div>
  </div>

<% end %>
